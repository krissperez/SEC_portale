<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>


    <div class="row">
        {#    sfondo a sinistra#}
        <div class="col-md-8 vh-100" style="background-color: darkslategray;">
        </div>

{#        form a destra#}
        <div class="col-md-4 vh-100 ">

            <div class="row justify-content-center align-items-center">
                <div class="col-md-10">
                    <img src="{{ asset("img/logo-sec.png") }}" alt="logo image" class="mt-5 mb-4" style="width: 60%">
                    <h3 class="mt-5" style="font-size: 1.5rem">Accesso</h3>
                    <p style="font-size: small">Si prega di autenticarsi per accedere all'area riservata.</p>
                    <div>
                        <form id="formDati" method="post">
                            <div>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                            </div>
                            <div>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            </div>
                            <div class="container-fluid">
                                <div class="row justify-content-end">
                                    <div class="col-6 text-right d-flex justify-content-end">
                                        <span class="pwd-dimenticata"><a href="#">Password dimenticata?</a></span>
                                    </div>
                                </div>
                            </div>
                            <input type="submit" id="submit" class="btn btn-primary btn-block" value="Login">
                        </form>

                    </div>
                </div>
                </div>

            </div>
        </div>
<script>
    $(function () {
        user.init();
    })

    let user = {
        init: function (){
            user.setOnClickButton();
        },

        setOnClickButton: function (){
            $('#submit').on('click', function (e){
                e.preventDefault();
                user.checkCredentials();
            })
        },

        checkCredentials: function (){
                let form_data = new FormData($("#formDati")[0]);
                $.ajax({
                    url: 'http://localhost:8080/api/login',
                    cache: false,
                    contentType: false,
                    processData: false,
                    data: form_data,
                    type: 'POST',
                    success: function (data) {
                        if (data.ok === true){
                            window.location.pathname = '/clienti';
                        } else {
                            alert('hvekvekv');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', xhr.responseText);
                        console.error('Status:', status);
                        console.error('Error:', error);
                    }
                })

        }
    }
</script>


</body>
</html>
