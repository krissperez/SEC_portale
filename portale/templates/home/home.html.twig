{% extends './base.html.twig' %}
{% block stylesheets %}
    <style>
        .box{
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #F2F2F2;
            border-radius: 1.5rem;
            padding: 1rem;
            justify-content: center;
        }

        .box:hover{
            background-color: #e0e0e0;
            transition: background-color 0.3s;
        }
        .totals{
            font-weight: bolder;
            font-size: 5rem;
            color: #B51F27;
        }

        .entity{
            font-weight: bolder;
            font-size: 2rem;
        }

        .btn-add{
            color:white;
            background-color: #B51F27;
        }

        .btn-add:hover{
            color:white;
            background-color: #9d1c23;
        }

        .panel{
            display: grid;
            grid: repeat(2, 1fr) / repeat(2, 1fr);
            gap: 3rem;
        }

        @media (max-width: 600px) {
            .panel {
                grid: repeat(1, 1fr) / repeat(1, 1fr);
            }
        }

        .ranking{
            list-style: none;

        }

        .ranking-index{
            color: #9d1c23;
        }

        .ranking-total{
            color: #93353c;
        }


    </style>
{% endblock %}
{% block body %}

    <div class="d-flex flex-column flex-md-row justify-content-md-between align-items-center mb-3">
        <h2 class="fw-bold fs-1">Benvenuto</h2>
        <div class=" mt-3 mt-md-0">
            <a href="{{ path("nuovo_cliente") }}" class="me-2 btn btn-add">Aggiungi Clienti</a>
            <a href="{{ path("nuovo_agente") }}" class="btn btn-add">Aggiungi Agenti</a>
        </div>
    </div>


    <div class="panel mt-5">
        <div class=" box">
            <p class="totals">{{ clientTotal }}</p>
            <p class="entity text-capitalize">Clienti</p>
        </div>
        <div class="box">
            <p class="totals">{{ agentTotal }}</p>
            <p class="entity text-capitalize">Agenti</p>
        </div>
        <div class="box">
            <p class="totals">{{ salesLastThreeMonths }}</p>
            <p class="entity text-capitalize">totale vendite trimestrali</p>
        </div>
        <div class="box">
            <ul class="ranking fw-bold fs-5">
                {% for agents in topFiveAgents %}
                    <li>
                        <span class="me-1 ranking-index">
                            {{ loop.index <= 5 ? loop.index : 5 }}.
                        </span>
                        <span class="me-1">
                            {{ agents['nome']}}
                        </span>
                        <span class="me-1">
                            {{ agents['cognome']}}:
                        </span>
                        <span class="ranking-total">
                            {{ agents['num_agenti']}}
                        </span>
                    </li>
                {% endfor %}
            </ul>
            <p class="entity text-capitalize">Top 5 agenti</p>
        </div>
    </div>

{% endblock %}